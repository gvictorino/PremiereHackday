<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/match_background"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/matchInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="12' 1T"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/matchHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="19:00"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_regular"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/liveImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/red_circle"
            android:padding="1.5dp"
            app:layout_constraintTop_toTopOf="@id/pulseImageView"
            app:layout_constraintBottom_toBottomOf="@id/pulseImageView"
            app:layout_constraintEnd_toEndOf="@id/pulseImageView"
            app:layout_constraintStart_toStartOf="@id/pulseImageView"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/pulseImageView"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/red_circle"
            android:alpha="0.3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/homeTeamImageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_team_placeholder"
            android:contentDescription="@null"
            android:layout_marginStart="6dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/matchInformation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/scoreLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/matchInformation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center">

            <TextView
                android:id="@+id/homeTeamScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginEnd="8dp"
                tools:text="0"/>

            <TextView
                android:id="@+id/versusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_regular"
                tools:text="X"/>

            <TextView
                android:id="@+id/awayTeamScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginStart="8dp"
                tools:text="0"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/awayTeamImageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_team_placeholder"
            android:contentDescription="@null"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/matchInformation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>