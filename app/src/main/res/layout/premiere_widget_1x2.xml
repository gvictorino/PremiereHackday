<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:theme="@style/Theme.PremiereHackday.AppWidgetContainer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/widget_background"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:id="@+id/matchTimeContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/liveIcon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:importantForAccessibility="no"
                android:scaleType="fitCenter"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_live" />

            <TextView
                android:id="@+id/matchTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12' 1T"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/homeTeamLogo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/matchTimeContainer"
            android:layout_alignBottom="@+id/scoreText"
            android:layout_alignParentStart="true"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_team_shield" />

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/matchTimeContainer"
            android:layout_marginHorizontal="8dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="0 x 0"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/awayTeamLogo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/matchTimeContainer"
            android:layout_alignBottom="@+id/scoreText"
            android:layout_alignParentEnd="true"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_team_shield" />

    </RelativeLayout>
</FrameLayout>
