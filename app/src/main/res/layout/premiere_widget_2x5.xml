<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:theme="@style/Theme.PremiereHackday.AppWidgetContainer">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/widget_background"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:id="@+id/matchTimeContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/scoreText"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/liveIcon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:importantForAccessibility="no"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_live" />

                <TextView
                    android:id="@+id/matchTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12' 1T"
                    android:textSize="18sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/homeTeamLogo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_below="@id/matchTimeContainer"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_team_shield" />

            <TextView
                android:id="@+id/homeTeamText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/homeTeamLogo"
                android:layout_alignEnd="@+id/homeTeamLogo"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="ABC"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/scoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/homeTeamLogo"
                android:layout_marginHorizontal="8dp"
                android:layout_toEndOf="@id/homeTeamLogo"
                android:gravity="center"
                android:text="0 x 0"
                android:textSize="28sp" />

            <ImageView
                android:id="@+id/awayTeamLogo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_below="@id/matchTimeContainer"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/scoreText"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_team_shield" />

            <TextView
                android:id="@+id/awayTeamText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/awayTeamLogo"
                android:layout_alignStart="@+id/awayTeamLogo"
                android:gravity="center"
                android:text="ABC"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/championshipText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scoreText"
                android:layout_alignStart="@+id/homeTeamLogo"
                android:layout_alignEnd="@+id/awayTeamLogo"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Campeonato GaÃºcho"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="18dp"
                android:layout_toEndOf="@+id/awayTeamLogo"
                android:src="@drawable/snapshot" />

        </RelativeLayout>
</FrameLayout>
