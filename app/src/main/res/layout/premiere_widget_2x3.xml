<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:theme="@style/Theme.PremiereHackday.AppWidgetContainer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/widget_background"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/liveIcon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignTop="@id/matchTime"
            android:layout_alignBottom="@id/matchTime"
            android:layout_alignParentEnd="true"
            android:importantForAccessibility="no"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_live" />

        <TextView
            android:id="@+id/matchTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_toStartOf="@id/liveIcon"
            android:text="12' 1T"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/homeTeamLogo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@id/matchTime"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_team_shield" />

        <TextView
            android:id="@+id/homeTeamText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/homeTeamLogo"
            android:layout_alignEnd="@+id/homeTeamLogo"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="ABC"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/matchTime"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="16dp"
            android:layout_toStartOf="@id/awayTeamLogo"
            android:layout_toEndOf="@id/homeTeamLogo"
            android:gravity="center"
            android:text="0 x 0"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/awayTeamLogo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@id/matchTime"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_team_shield" />

        <TextView
            android:id="@+id/awayTeamText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/awayTeamLogo"
            android:layout_alignStart="@+id/awayTeamLogo"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="ABC"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/championshipText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scoreText"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="12sp"
            android:text="Campeonato GaÃºcho" />

    </RelativeLayout>
</FrameLayout>
